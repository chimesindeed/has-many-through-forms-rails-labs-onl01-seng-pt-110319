<h1>New Post</h1>
<%= form_for @post do |f| %>

  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
  <br/>

  <%= f.label :content, "Content" %>
  <%= f.text_area :content %>
  <br/>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <br/>
  
  <%= f.fields_for :categories, post.categories.build do |category_fields| %>
    <%= category_fields.label :name, "Category" %>
    <%= category_fields.text_field :name %>
  <% end %>
  <br/>
  
<%= f.submit %>
<% end %>